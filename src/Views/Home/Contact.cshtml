@{
    Layout = "_customerLayout";
}


    <div class="container-contact">
        <div class="box-contact">
            <div class="box-text-contact">
                <h1 class="text-heading2 text-secon-color">Let’s get in touch</h1>
                <p class="text-common-lab text-thirt-color">Hey there, we’re appreciate if you can send us a message to make our website get better. Your opinion is very helpful for us to improve the website more develop. Thank you ! </p>
            </div>
            <div class="box-from-contact">
                <h3 class="text-common-sub">Email</h3>
                <input class="input-from-contact" type="email" placeholder="example@email.com">
                <h3 class="text-common-sub">Name</h3>
                <input class="input-from-contact" type="email" placeholder="Enter your full name">
                <h3 class="text-common-sub">Phone</h3>
                <input class="input-from-contact" type="email" placeholder="Enter your phone number">
                <h3 class="text-common-sub">Message</h3>
                <textarea placeholder="Your message"></textarea>

                <button class="btn-send-contact text-body2 text-main-color">Send</button>
            </div>
        </div>


    </div>


