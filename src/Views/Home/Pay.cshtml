@{
    Layout = "_customerLayout";
}

    
    <div class="container-pay">
        <div class="box-lef-body-pay-booking">
            <a href="info-hotel.html" class="btn-icon btn-back-pay text-body2 text-thirt-color"><img src="assets/icon/Back.png" alt="">Back to place</a>
            <h1 class="text-heading2 text-secon-color margin-top-40">Checkout Your Pay</h1>
            <p class="text-body1 margin-top-4 margin-bot-56">Let’s check your information for payment</p>

            <h1 class="text-heading4 text-secon-color margin-bot-12">1. Contact Info</h1>

            <div class="form-pay ">
                <div class="box-input-pay">
                    <h1 class="text-body2 text-secon-color">First Name</h1>
                    <div class="margin-top-4 box-people-pay btn-icon">
                        <h1 class="text-common-lab"> Korochev</h1>
                    </div>
                </div>

                <div class="box-input-pay">
                    <h1 class="text-body2 text-secon-color">Last Name</h1>
                    <div class="margin-top-4 box-people-pay btn-icon">
                        <h1 class="text-common-lab">Constantin</h1>
                    </div>
                </div>
            </div>

            <div class="form-pay margin-top-20 margin-bot-56">
                <div class="box-input-pay">
                    <h1 class="text-body2 text-secon-color">Phone Number</h1>
                    <div class="margin-top-4 box-people-pay btn-icon">
                        <h1 class="text-common-lab">0373 823 192</h1>
                    </div>
                </div>
                <div class="box-input-pay">
                    <h1 class="text-body2 text-secon-color">Email</h1>
                    <div class="margin-top-4 box-people-pay btn-icon">
                        <h1 class="text-common-lab">constantin.work@outlook.com</h1>
                    </div>
                </div>
            </div>

            <h1 class="text-heading4 text-secon-color margin-bot-48 ">2. Participant Info</h1>

            <div class="form-pay ">
                <div class="box-input-pay">
                    <h1 class="text-body2 text-secon-color">Room</h1>
                    <div class="margin-top-4 box-people-pay btn-icon">
                        <img src="~/assets/icon/Room.png" class="size-20 fa-regular fa-user margin-right-12">
                        <h1 class="text-common-lab">1</h1>
                    </div>
                </div>
                <div class="box-input-pay">
                    <h1 class="text-body2 text-secon-color">People</h1>
                    <div class="margin-top-4 box-people-pay btn-icon">
                        <i class="font-size-20 fa-regular fa-user margin-right-12"></i>
                        <h1 class="text-common-lab">1</h1>
                    </div>
                </div>
            </div>

            <div class="form-pay margin-top-20">
                <div class="box-input-pay">
                    <h1 class="text-body2 text-secon-color">Check in</h1>
                    <div class="margin-top-4 box-people-pay btn-icon">
                        <img src="~/assets/icon/Calendar.png" class="size-20 fa-regular fa-user margin-right-12">
                        <h1 class="text-common-lab">1/12/2023</h1>
                    </div>
                </div>
                <div class="box-input-pay">
                    <h1 class="text-body2 text-secon-color">Check out</h1>
                    <div class="margin-top-4 box-people-pay btn-icon">
                        <img src="~/assets/icon/Calendar.png" class="size-20 fa-regular fa-user margin-right-12">
                        <h1 class="text-common-lab">3/12/2023</h1>
                    </div>
                </div>
            </div>
            <h1 class="text-common-lab text-thirt-color margin-top-20">Notes:</h1>
            <textarea class="textarea-pay margin-bot-56" name="" id="" cols="30" rows="10"
                placeholder="Type your note here ..."></textarea>

            <h1 class="text-heading4 text-secon-color margin-bot-48">3. Payment Method</h1>
            <div class="box-payment-pay margin-bot-56">
                <button class="text-body2 text-secon-color btn-icon btn-payment-pay"><img src="~/assets/icon/Momo.png"
                        alt="">Momo</button>
                <button class="text-body2 text-secon-color btn-icon btn-payment-pay"><img src="~/assets/icon/Paypal.png"
                        alt="">Paypal</button>
                <button class="text-body2 text-secon-color btn-icon btn-payment-pay"><img
                        src="~/assets/icon/Credit Card.png" alt="">Credit Card</button>
                <button class="text-body2 text-secon-color btn-icon btn-payment-pay"><img src="~/assets/icon/GPay.png"
                        alt="">Google Pay</button>
            </div>
            <div class="box-visa-pay margin-bot-56">
                <img class="size-full" src="~/assets/img/Visa Card.png" alt="">
            </div>
            <div class="form-pay ">
                <div class="box-input-pay">
                    <h1 class="text-body2 text-secon-color">First Name</h1>
                    <div class="margin-top-4 box-people-pay btn-icon">
                        <h1 class="text-common-lab">Korochev</h1>
                    </div>
                </div>

                <div class="box-input-pay">
                    <h1 class="text-body2 text-secon-color">Last Name</h1>
                    <div class="margin-top-4 box-people-pay btn-icon">
                        <h1 class="text-common-lab">Constantin</h1>
                    </div>
                </div>
            </div>

            <div class="form-pay margin-top-20">
                <div class="box-input-pay">
                    <h1 class="text-body2 text-secon-color">Card Number</h1>
                    <div class="margin-top-4 box-people-pay btn-icon">
                        <h1 class="text-common-lab">1639 2738 2637 3637</h1>
                    </div>
                </div>

                <div class="box-input-pay">
                    <h1 class="text-body2 text-secon-color">ZIP Code</h1>
                    <div class="margin-top-4 box-people-pay btn-icon">
                        <h1 class="text-common-lab">224 000</h1>
                    </div>
                </div>
            </div>

            <div class="form-pay margin-top-20">
                <div class="box-input-pay">
                    <h1 class="text-body2 text-secon-color">City</h1>
                    <div class="margin-top-4 box-people-pay btn-icon">
                        <h1 class="text-common-lab">Minsk</h1>
                    </div>
                </div>

                <div class="box-input-pay">
                    <h1 class="text-body2 text-secon-color">Country</h1>
                    <div class="margin-top-4 box-people-pay btn-icon">
                        <h1 class="text-common-lab">Belarus</h1>
                    </div>
                </div>
            </div>

        </div>
        <div class="box-right-body">
            <div class="box-price">
                <h1 class="text-heading3 text-secon-color">Binh An Village Da Lat </h1>
                <div class="box-title-pirce margin-bot-48">
                    <h1 class="text-body2">Resort</h1>
                    <h1 class="text-body2">Tuyen Lam Lake, Ward 3, Da Lat City</h1>
                </div>
                <h1 class="text-body2">People: 1</h1>
                <h1 class="text-body2">Room: 1</h1>
                <h1 class="text-body2">Nights: 2</h1>
                <h1 class="text-body2">Check in date: 1/12/2023</h1>
                <h1 class="text-body2">Check out date: 3/12/2023</h1>
                <h1 class="text-body2">Payment method: VISA </h1>
                <div class="box-title-pirce box-title-pirce_border margin-top-28">
                    <h1 class="text-body2">Subtotal</h1>
                    <h1 class="text-body2">600,000đ</h1>
                </div>
                <div class="box-title-pirce margin-top-8 margin-bot-16 ">
                    <h1 class="text-body2">Tax</h1>
                    <h1 class="text-body2">40,000đ</h1>
                </div>
                <div class="total-bill box-title-pirce margin-bot-48">
                    <h1 class="text-heading4">Total price</h1>
                    <h1 class="text-heading4">640,000đ</h1>
                </div>
                <a asp-controller="Home" asp-action="Thanks"><button
                        class="text-body2 text-main-color btn-order-pay">Order</button></a>
            </div>
        </div>
    </div>