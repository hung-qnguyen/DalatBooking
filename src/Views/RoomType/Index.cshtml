@model List<BookingApp.Models.RoomType>
@{
  Layout = "_Layout";
}
  <div class="container">
    <div class="row pt-14">
      <div class="col-6">
        <h2 class="text-primary">Room List</h2>
      </div>
      <div class="col-6 text-end">
        <a asp-controller="RoomType" asp-action="Create" class="btn btn-primary">
          <i class="bi bi-plus-circle"></i>Create New Room Type
        </a>
      </div>
    </div>
  </div>

  <table class="table table-striped table-bordered table-responsive">
    <thead>
      <tr>
        <th>Id</th>
        <th>Type Label</th>
        <th>Desc</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      @foreach (var type in Model)
      {
      <tr>
        <td>@type.Id</td>
        <td>@type.Type</td>
        <td>@type.Description</td>
        <td>
          <div class="w-75 btn-group" role="group">
            <a asp-controller="RoomType" asp-action="Edit" asp-route-id="@type.Id" class="btn btn-dark mx-1">
              <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-controller="RoomType" asp-action="Delete" asp-route-id="@type.Id" class="btn btn-danger mx-1">
              <i class="bi bi-trash-fill"></i> Delete
            </a>
          </div>
        </td>
      </tr>

      }
    </tbody>
  </table>