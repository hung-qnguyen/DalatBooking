@model RoomVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Room<RoomTypeIdh2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Room.Name" class="form-control border-0 shadow" />
                    <label asp-for="Room.Name" class="ms-2"></label>
                    <span asp-validation-for="Room.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Room.PricePerNight" class="form-control border-0 shadow" />
                    <label asp-for="Room.PricePerNight" class="ms-2"></label>
                    <span asp-validation-for="Room.PricePerNight" class="text-danger"></span>
                </div>
                @* <div class="form-floating py-2 col-12">
                    <input asp-for="Room.Booked" class="form-control border-0 shadow" />
                    <label asp-for="Room.Booked" class="ms-2"></label>
                    <span asp-validation-for="Room.Booked" class="text-danger"></span>
                </div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Room.Details" class="form-control border-0 shadow" />
                    <label asp-for="Room.Details" class="ms-2"></label>
                    <span asp-validation-for="Room.Details" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Room.Capacity" class="form-control border-0 shadow" />
                    <label asp-for="Room.Capacity" class="ms-2"></label>
                    <span asp-validation-for="Room.Capacity" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Room.Occupancy" class="form-control border-0 shadow" />
                    <label asp-for="Room.Occupancy" class="ms-2"></label>
                    <span asp-validation-for="Room.Occupancy" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Room.HotelId" asp-items="@Model.HotelList" class="form-select border-0 shadow">
                    </select>
                    <label asp-for="Room.HotelId" class="ms-2"></label>
                    <span asp-validation-for="Room.HotelId" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Room.RoomTypeId" asp-items="@Model.RoomTypeList" class="form-select border-0 shadow">
                    </select>
                    <label asp-for="Room.RoomTypeId" class="ms-2"></label>
                    <span asp-validation-for="Room.RoomTypeId" class="text-danger"></span>
                </div>

                <div class="form-check py-2 col-12">
                    <input asp-for="Room.Booked" type="checkbox" class="form-check-input">
                    <label asp-for="Room.Booked" class="form-check-label ms-2"></label>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Room" asp-action="Index"
                            class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>




@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}